<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:padding="@dimen/width_3_160"
              android:layout_height="match_parent"
              android:orientation="horizontal">

    <LinearLayout
        android:gravity="center"
        android:layout_weight="1"
        android:layout_marginRight="@dimen/width_3_160"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <com.rey.material.widget.ProgressView
            android:layout_width="@dimen/width_8_160"
            android:layout_height="@dimen/width_8_160"
            app:pv_autostart="true"
            app:pv_circular="true"
            app:pv_progressMode="indeterminate"
            app:pv_progressStyle="@style/Material.Drawable.CircularProgress"/>

        <TextView
            android:id="@+id/dialog_meassage"
            android:layout_marginLeft="@dimen/width_5_160"
            android:layout_width="wrap_content"
            android:textSize="16sp"
            android:layout_height="wrap_content"
            android:text="正在加载..."/>
    </LinearLayout>

    <View
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:background="@color/grey"/>

    <ImageView
        android:tint="@color/grey"
        android:id="@+id/close_dialog"
        android:layout_marginLeft="@dimen/width_10_160"
        android:layout_gravity="center_vertical"
        android:layout_width="@dimen/width_10_160"
        android:layout_height="@dimen/width_10_160"
        android:src="@drawable/dialog_right_close"/>
</LinearLayout>